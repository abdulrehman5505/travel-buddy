<resources>
    <!-- Base application theme. -->
    <style name="Theme.TravelBuddy" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/light_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="splashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/yellow</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryVariant">@color/light_yellow</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="textInputLayout" parent="Theme.TravelBuddy">
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="textInputEditText" parent="Theme.TravelBuddy">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="menuItemsStyle">
        <item name="fontFamily">@font/poppin_reg</item>
    </style>

    <style name="Smaller_Drawable">
        <item name="android:textSize">20sp</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:scaleY">0.8</item>
    </style>
</resources>